@model SmartEducation.Models.DTOs.DayDto

<h1>Create Day</h1>

<form asp-controller="Day" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" type="date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StudyTopics"></label>
        <textarea asp-for="StudyTopics" class="form-control"></textarea>
        <span asp-validation-for="StudyTopics" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TutorId"></label>
        <input asp-for="TutorId" type="number" class="form-control" />
        <span asp-validation-for="TutorId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
