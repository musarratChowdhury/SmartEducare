@{
    int counter = 1;
}

@model List<SmartEducation.Models.Entities.Day>
@section Styles{
    <link rel="stylesheet" href="~/css/Day/day.css"/>
}
<h1>Day List</h1>
<a class="btn btn-primary btn-sm" asp-action="Create" asp-controller="Day"><i class="fa fa-plus"></i> Add Day</a>


<div class="table-container">
    <table class="table">
        <thead>
        <tr>
            <th>No.</th>
            <th>Date</th>
            <th>StudyTopics</th>
            <th>Tutor Name</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var topic in Model)
        {
            <tr>
                <td>@counter</td>
                <td>@topic.Date.ToString("d MMM, yyyy")</td>
                <td>@topic.StudyTopics</td>
                @if (topic.Tutor != null)
                {
                    <td>@topic.Tutor.Name</td>
                }
                else
                {
                    <td>No Tutor</td>
                }
            </tr>
            counter++;
        }
        </tbody>
    </table>
</div>